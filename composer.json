{
  "name": "lochmueller/securitytxt",
  "type": "typo3-cms-extension",
  "description": "security.txt integration",
  "license": "GPL-2.0-or-later",
  "autoload": {
    "psr-4": {
      "HDNET\\SecurityTxt\\": "Classes/"
    }
  },
  "require": {
    "php": "^8.3",
    "typo3/cms-core": "^13.4"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.84"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "securitytxt",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  },
  "scripts": {
    "code-fix": ".Build/bin/php-cs-fixer fix Classes --rules=@PER-CS2.0:risky,@PER-CS2.0,declare_strict_types,no_unused_imports --allow-risky yes"
  }
}
